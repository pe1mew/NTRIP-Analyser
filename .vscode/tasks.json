{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build NTRIP-Analyser (CodeBlocks MinGW)",
            "type": "shell",
            "command": "C:/Program Files/CodeBlocks/MinGW/bin/gcc.exe",
            "args": [
                "-g",
                "-o",
                "bin/ntripanalyse.exe",
                "src/main.c",
                "lib/cJSON/cJSON.c",
                "src/rtcm3x_parser.c",
                "src/ntrip_handler.c",
                "src/config.c",
                "src/cli_help.c",
                "-Ilib/cJSON",
                "-lws2_32",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Builds the NTRIP-Analyser executable using CodeBlocks MinGW"
        }
    ]
}